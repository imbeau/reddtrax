<% provide(:title, "Create New Campaign") %>
    <h1>New Campaign</h1>
    	<div class="row">
    		<div class="col-md-6 col-md-offset-3">
    			<%= form_for(@tracker, url: new_tracker_path) do |f| %>
                    <%= render '/shared/error_messages' %>

    				<%= f.label :name %>
    				<%= f.text_field :name, class: 'form-control' %>

    				<%= f.label :keywords %>
    				<%= f.text_field :keywords, class: 'form-control' %>

    				<%= f.submit "Create New Campaign", class: "btn btn-primary" %>
    			<% end %>
    		</div>
    	</div>
